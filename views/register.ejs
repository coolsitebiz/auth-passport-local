<div class="d-flex justify-content-center">
<div class="card" style="width: 30rem; padding: 10px; margin-top: 10vh;">
<h1>register</h1>
<div class="form-group">
<form method="POST" action="/auth/register">
  <label for="username">Username: </Label>
  <input type="text" class="form-control" name="username" required value="<%= typeof username!= 'undefined' ? username : '' %>"/>
  <br />
  <label for="email">Email: </Label>
  <input type="email" class="form-control" name="email" required value="<%= typeof email!= 'undefined' ? email : '' %>" />
  <br />
  <label for="password">Password: </label>
  <input type="password" class="form-control" name="password" required value="<%= typeof password!= 'undefined' ? password : '' %>" />
  <br />
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('partials/messages'); %>
</div>
</div>
</div>

